.card {
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 5px 5px 1px #ccc;
  margin: 10px 10px 20px;
  height: 100%;
}

.image {
  width: 100%;
  height: 240px;
  border-radius: 5px;
  display: block;
}

.loadmore {
  border: 0px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 5px 1px #ccc;
  margin: 8px;
}
